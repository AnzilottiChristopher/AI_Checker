{
  "version": 2,
  "builds": [
    {
      "src": "backend.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "backend.py"
    },
    {
      "src": "/(.*)",
      "dest": "backend.py"
    }
  ],
  "env": {
    "PYTHONPATH": "."
  },
  "functions": {
    "backend.py": {
      "maxDuration": 30
    }
  }
} 